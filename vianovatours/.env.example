# Frontend runtime
VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Optional auth routing
# If set, redirectToLogin() uses this URL.
# VITE_LOGIN_URL=https://your-login-page.example.com

# Optional provider for Supabase OAuth (google, github, etc.)
# VITE_SUPABASE_AUTH_PROVIDER=google

# Optional host routing
# Admin hosts render dashboard layout and auth-first behavior.
VITE_ADMIN_HOSTS=backend.vianovatours.com,localhost,127.0.0.1
# Main-site hosts render homepage instead of domain-matched landing pages.
VITE_MAIN_SITE_HOSTS=vianovatours.com,www.vianovatours.com,localhost,127.0.0.1

# Optional storage upload config
VITE_SUPABASE_STORAGE_BUCKET=uploads

# Optional profile role lookup
VITE_SUPABASE_PROFILE_TABLE=profiles
VITE_SUPABASE_PROFILE_ROLE_COLUMN=role

# Optional edge functions settings
# Override if you use a custom gateway/proxy; default is ${VITE_SUPABASE_URL}/functions/v1
# VITE_SUPABASE_FUNCTIONS_URL=https://YOUR_PROJECT_REF.supabase.co/functions/v1
# Used by Tour Setup webhook helper:
VITE_WOOCOMMERCE_WEBHOOK_FUNCTION=woo-commerce-webhook

# Optional fine-grained mappings:
# JSON map from legacy Base44 function names to Supabase edge function names
# VITE_SUPABASE_FUNCTION_MAP={"fetchWooCommerceOrders":"fetch-woocommerce-orders"}
#
# JSON map from entity names to Supabase table names
# VITE_SUPABASE_TABLE_MAP={"Order":"orders","Tour":"tours"}

# Optional connector/API tokens used by edge functions
# GOOGLEDRIVE_ACCESS_TOKEN=...
# GMAIL_ACCESS_TOKEN=...
# SLACK_BOT_TOKEN=...
# GOOGLE_OAUTH_CLIENT_ID=...
# GOOGLE_OAUTH_CLIENT_SECRET=...
# GOOGLE_OAUTH_REFRESH_TOKEN=...
# GOOGLE_DRIVE_RECEIPTS_FOLDER_ID=your_drive_folder_id_or_url

# Webhook secrets
# EMAIL_WEBHOOK_SECRET=...
# WOOCOMMERCE_WEBHOOK_SECRET=...
# LOG_AD_SPEND_WEBHOOK_SECRET=...
